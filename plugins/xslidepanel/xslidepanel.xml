	<authorUrl>www.devxive.com</authorUrl>
	<version>0.0.1</version>
	<description>PLG_SYSTEM_XSLIDEPANEL_XML_DESCRIPTION</description>
	<files>
		<filename plugin="xslidepanel">xslidepanel.php</filename>
		<filename>index.html</filename>
		<folder>assets</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_system_xslidepanel.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_system_xslidepanel.sys.ini</language>
	</languages>
	<config>
		<fields name="params">

			<fieldset name="basic">
				<field	name="browsercache" type="radio"
					class="btn-group"
					default="0"
					description="PLG_SYSTEM_XSLIDEPANEL_FIELD__DESC"
					label="PLG_SYSTEM_XSLIDEPANEL_FIELD__LABEL"
				>
					<option
						value="0">JNO</option>
					<option
						value="1">JYES</option>
				</field>
			</fieldset>

		</fields>
	</config>
</extension>
